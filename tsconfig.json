{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}